# ENV-Template für Workflow-Integration
# Kopieren Sie diese Datei zu .env und füllen Sie die Werte aus

# ---------- n8n Konfiguration ----------
N8N_URL=http://localhost:5678
N8N_USER=admin
N8N_PASSWORD=password
N8N_API_KEY=
N8N_ENCRYPTION_KEY=your_encryption_key_min_32_chars
N8N_HOST=localhost
N8N_PROTOCOL=http
N8N_DATA_FOLDER=./n8n_data

# ---------- GitHub/GitLab Konfiguration ----------
# GitHub Personal Access Token (benötigte Scopes: repo, workflow)
GITHUB_TOKEN=
# GitLab Personal Access Token (benötigte Scopes: api, read_repository, write_repository)
GITLAB_TOKEN=

# ---------- OpenProject Konfiguration ----------
OPENPROJECT_URL=https://your-openproject-instance.com
OPENPROJECT_TOKEN=
# Status-IDs für verschiedene Zustände im Workflow
OPENPROJECT_NEW_STATUS_ID=1
OPENPROJECT_IN_PROGRESS_STATUS_ID=7
OPENPROJECT_PR_CREATED_STATUS_ID=2
OPENPROJECT_RESOLVED_STATUS_ID=12

# ---------- AFFiNE Konfiguration ----------
AFFINE_API_URL=https://your-affine-instance.com/api
AFFINE_API_KEY=

# ---------- AppFlowy Konfiguration ----------
APPFLOWY_API_URL=https://your-appflowy-instance.com/api
APPFLOWY_API_KEY=

# ---------- OpenHands Konfiguration ----------
# API-Key für LLM (z.B. Anthropic Claude)
LLM_API_KEY=
LLM_MODEL=anthropic/claude-3-5-sonnet-20240620
# Base URL für OpenHands API falls custom
OPENHANDS_API_URL=

# ---------- Discord Konfiguration ----------
# Discord Webhook URL für Benachrichtigungen
DISCORD_WEBHOOK_URL=

# ---------- Webhook Konfiguration ----------
# Webhook-Secret für sichere Kommunikation zwischen den Systemen
WEBHOOK_SECRET=generate_a_secure_random_string

# ---------- Organisation Konfiguration ----------
# Name Ihrer GitHub/GitLab Organisation
ORG_NAME=
# Comma-separierte Liste von Repositories, die übersprungen werden sollen
SKIP_REPOS=
# Comma-separierte Liste von Repositories, die ausschließlich verarbeitet werden sollen
ONLY_REPOS=

# ---------- Projekt-Mapping ----------
# JSON-Mapping zwischen Repositories und OpenProject-Projekten
# Format: {"owner/repo": {"projectId": "1", "projectName": "Project 1"}}
PROJECT_MAPPING={"owner/repo-1": {"projectId": "1", "projectName": "Project 1", "newIssueStatus": "1", "inProgressStatus": "7", "prStatus": "2", "resolvedStatus": "12"}}

# ---------- MCP Konfiguration ----------
# Aktivieren Sie den MCP-Server für n8n
MCP_ENABLED=true
# Port für den MCP-Server
MCP_SERVER_PORT=3333
# Host für den MCP-Server
MCP_SERVER_HOST=localhost
# Komma-separierte Liste der verfügbaren Tools
MCP_DEFAULT_TOOLS=create_github_issue,update_work_package,sync_documentation

# ---------- Logging Konfiguration ----------
LOG_LEVEL=info
# Ausgabe-Verzeichnis für Logs
LOG_DIR=./logs
