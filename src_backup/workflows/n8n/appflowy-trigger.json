{
  "name": "AppFlowy-Trigger",
  "nodes": [
    {
      "parameters": {
        "pollTimes": {
          "item": [
            {
              "mode": "everyMinute"
            }
          ]
        },
        "apiKey": "={{ $env.APPFLOWY_API_KEY }}",
        "databaseId": "={{ $env.APPFLOWY_DATABASE_ID }}"
      },
      "type": "n8n-nodes-appflowy.appflowyTrigger",
      "typeVersion": 1,
      "position": [240, 300],
      "id": "appflowy-trigger"
    },
    {
      "parameters": {
        "mode": "jsonToJson",
        "jsonInput": "={{ $json }}",
        "options": {
          "dotNotation": true
        },
        "jsonOutput": "={\n  \"title\": $json.title || $json.Title || \"AppFlowy Update\",\n  \"description\": $json.description || $json.Description || $json.content || $json.Content || \"\",\n  \"source_type\": \"appflowy\",\n  \"source_id\": $json.id || $json.ID || \"unknown\",\n  \"status\": $json.status || $json.Status || \"active\",\n  \"creator\": $json.creator || $json.Creator || \"appflowy-user\",\n  \"source_reference\": $json.source_id || $json[\"Source ID\"] || null,\n  \"source_system\": $json.source || $json.Source || null,\n  \"raw_data\": $json\n}"
      },
      "type": "n8n-nodes-base.itemBinary",
      "typeVersion": 1,
      "position": [460, 300],
      "id": "normalize-appflowy-data"
    },
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "appflowy-webhook",
        "responseMode": "lastNode",
        "options": {}
      },
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [660, 300],
      "id": "appflowy-webhook-out"
    }
  ],
  "connections": {
    "appflowy-trigger": {
      "main": [
        [
          {
            "node": "normalize-appflowy-data",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "normalize-appflowy-data": {
      "main": [
        [
          {
            "node": "appflowy-webhook-out",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "active": true,
  "settings": {
    "executionOrder": "v1",
    "saveExecutionProgress": true,
    "saveManualExecutions": true
  }
}
