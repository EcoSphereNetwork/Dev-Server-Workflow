{
  "name": "OpenProject-Trigger",
  "nodes": [
    {
      "parameters": {
        "pollTimes": {
          "item": [
            {
              "mode": "everyX",
              "value": 5,
              "unit": "minutes"
            }
          ]
        },
        "url": "={{ $env.OPENPROJECT_URL }}",
        "apiKey": "={{ $env.OPENPROJECT_API_KEY }}",
        "resource": "Work Packages",
        "operation": "List Work Packages",
        "filters": {
          "limit": 10,
          "updatedAt": {
            "operator": "gt",
            "value": "={{ $now.minus({ minutes: 10 }).toISO() }}"
          }
        }
      },
      "type": "n8n-nodes-base.openProject",
      "typeVersion": 1,
      "position": [240, 300],
      "id": "openproject-poller"
    },
    {
      "parameters": {
        "mode": "jsonToJson",
        "jsonInput": "={{ $json }}",
        "options": {
          "dotNotation": true
        },
        "jsonOutput": "={\n  \"title\": $json.subject,\n  \"description\": $json.description ? $json.description.raw : \"\",\n  \"source_type\": \"openproject\",\n  \"source_id\": $json.id,\n  \"url\": $json._links.self.href,\n  \"status\": $json._links.status.title,\n  \"creator\": $json._links.author.title,\n  \"project\": $json._links.project.title,\n  \"type\": $json._links.type.title,\n  \"priority\": $json._links.priority.title,\n  \"raw_data\": $json\n}"
      },
      "type": "n8n-nodes-base.itemBinary",
      "typeVersion": 1,
      "position": [460, 300],
      "id": "normalize-openproject-data"
    },
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "openproject-webhook",
        "responseMode": "lastNode",
        "options": {}
      },
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [660, 300],
      "id": "openproject-webhook-out"
    }
  ],
  "connections": {
    "openproject-poller": {
      "main": [
        [
          {
            "node": "normalize-openproject-data",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "normalize-openproject-data": {
      "main": [
        [
          {
            "node": "openproject-webhook-out",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "active": true,
  "settings": {
    "executionOrder": "v1",
    "saveExecutionProgress": true,
    "saveManualExecutions": true
  }
}
