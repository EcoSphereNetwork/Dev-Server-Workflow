  "llm": {
    "model": "qwen2.5-coder:7b-instruct",
    "baseUrl": "http://ollama:11434",
    "temperature": 0.7,
    "maxTokens": 4096,
    "systemPrompt": "You are a helpful AI assistant with access to various tools. Use these tools to help the user accomplish their tasks. Always think step by step and use the most appropriate tool for each task."
  },
  "toolDetection": {
    "enabled": true,
    "threshold": 0.7
  },
  "errorRecovery": {
    "enabled": true,
    "maxRetries": 3,
    "retryDelay": 1000
  },
  "logging": {
    "level": "info",
    "format": "json",
    "file": "/app/logs/ollama-mcp-bridge.log"
  },
  "security": {
    "allowRemoteCodeExecution": false,
    "allowShellCommands": false,
    "allowedHosts": [
